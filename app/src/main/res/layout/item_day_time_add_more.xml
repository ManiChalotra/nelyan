<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_10sdp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/_5sdp"
        android:paddingLeft="@dimen/_5sdp"
        android:orientation="vertical"
        android:paddingTop="@dimen/_10sdp"
        android:background="@drawable/back_shape"
        android:paddingBottom="@dimen/_10sdp">
    <TextView
        style="@style/CommonTextWrapcontent"
        android:text="Select Day" />
    <Spinner
        android:id="@+id/orderby1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:layout_marginTop="@dimen/_6sdp"
        android:autofillHints="date"
        android:dropDownSelector="@drawable/down_arrow"
        android:fontFamily="@font/regular"
        android:gravity="start"
        android:hint="Date Added"
        android:inputType="text"
        android:spinnerMode="dropdown"
        android:textColor="@color/black"
        android:textColorHint="@color/grey"
        android:textSize="@dimen/_10sdp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_3sdp"
        android:background="@color/black" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvAddDay"
            style="@style/CommonTextWrapcontent"
            android:layout_marginTop="@dimen/_5sdp"
            android:drawablePadding="@dimen/_5sdp"
            android:text="Add Day"
            android:textSize="@dimen/_10sdp"
            app:drawableStartCompat="@drawable/plus_icon" />

        <TextView
            android:id="@+id/tvAddTime"
            style="@style/CommonTextWrapcontent"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:drawablePadding="@dimen/_5sdp"
            android:text="Add"
            android:textSize="@dimen/_10sdp"
            android:focusable="true"
            app:drawableStartCompat="@drawable/plus_icon" />

    </RelativeLayout>

    </LinearLayout>
</LinearLayout>