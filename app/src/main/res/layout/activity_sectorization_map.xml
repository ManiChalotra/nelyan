<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SectorizationMapActivity">
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="@color/white"
        >
        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/left_arrow"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/_10sdp"
            />
        <TextView
            style="@style/HeaderText"
            android:layout_centerInParent="true"
            android:textColor="@color/black"
            android:text="Sectorization Map"/>
        <ImageView
            android:id="@+id/ivFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/filter_icon"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/_10sdp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header">
        <fragment
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment" />
        <RelativeLayout
            android:id="@+id/rl_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_40sdp">
<LinearLayout
    android:id="@+id/ll_1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape"
    android:layout_marginRight="@dimen/_30sdp"
    android:layout_alignParentRight="true"
    android:orientation="horizontal">
    <ImageView
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_marginLeft="@dimen/_3sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/train"/>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/_5sdp"
    android:layout_marginTop="@dimen/_3sdp"
    android:layout_marginLeft="@dimen/_5sdp"
    android:orientation="vertical">
    <TextView
        style="@style/CommonTextWrapcontent"
        android:textSize="@dimen/_10sdp"
        android:text="New York penn"
        /><TextView
        style="@style/CommonTextWrapcontent"
        android:textSize="@dimen/_7sdp"
        android:text="New York penn"
        /><TextView
        style="@style/CommonTextWrapcontent"
        android:textSize="@dimen/_7sdp"
    android:drawableLeft="@drawable/walking_icon"
    android:drawablePadding="@dimen/_5sdp"
        android:text="45 min | 26km"
    android:layout_marginBottom="@dimen/_5sdp"
        />
</LinearLayout>
</LinearLayout>
            <LinearLayout
    android:id="@+id/ll_2"
      android:layout_below="@id/ll_1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape"
                android:layout_marginLeft="@dimen/_20sdp"
    android:orientation="horizontal">
    <ImageView
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_marginLeft="@dimen/_3sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/cap_icon"/>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/_5sdp"
    android:layout_marginTop="@dimen/_3sdp"
    android:layout_marginLeft="@dimen/_5sdp"
    android:orientation="vertical">
    <TextView
        style="@style/CommonTextWrapcontent"
        android:textSize="@dimen/_10sdp"
        android:text="Bois-Bonnet"
        /><TextView
        style="@style/CommonTextWrapcontent"
        android:textSize="@dimen/_7sdp"
        android:text="Nursery School"
        /><TextView
        style="@style/CommonTextWrapcontent"
        android:textSize="@dimen/_7sdp"
    android:drawableLeft="@drawable/walking_icon"
    android:drawablePadding="@dimen/_5sdp"
        android:text="45 min | 26km"
    android:layout_marginBottom="@dimen/_5sdp"
        />
</LinearLayout>
</LinearLayout>
            <LinearLayout
                android:id="@+id/ll_3"
                android:layout_below="@id/ll_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape"
                android:layout_marginRight="@dimen/_30sdp"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">
                <ImageView
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/train"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:orientation="vertical">
                    <TextView
                        style="@style/CommonTextWrapcontent"
                        android:textSize="@dimen/_10sdp"
                        android:text="Clos-Laine"
                        /><TextView
                    style="@style/CommonTextWrapcontent"
                    android:textSize="@dimen/_7sdp"
                    android:text="Elementary School"
                    /><TextView
                    style="@style/CommonTextWrapcontent"
                    android:textSize="@dimen/_7sdp"
                    android:drawableLeft="@drawable/walking_icon"
                    android:drawablePadding="@dimen/_5sdp"
                    android:text="45 min | 26km"
                    android:layout_marginBottom="@dimen/_5sdp"
                    />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_4"
                android:layout_below="@id/ll_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape"
                android:layout_alignParentLeft="@dimen/_20sdp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/train"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:orientation="vertical">
                    <TextView
                        style="@style/CommonTextWrapcontent"
                        android:textSize="@dimen/_10sdp"
                        android:text="New York penn"
                        /><TextView
                    style="@style/CommonTextWrapcontent"
                    android:textSize="@dimen/_7sdp"
                    android:text="New York penn"
                    /><TextView
                    style="@style/CommonTextWrapcontent"
                    android:textSize="@dimen/_7sdp"
                    android:drawableLeft="@drawable/walking_icon"
                    android:drawablePadding="@dimen/_5sdp"
                    android:text="45 min | 26km"
                    android:layout_marginBottom="@dimen/_5sdp"
                    />
                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:id="@+id/ivHome"
                android:layout_below="@id/ll_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/home_circle"
                android:layout_centerInParent="true"/>
            <LinearLayout
                android:id="@+id/ll_5"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_below="@id/ivHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape"
                android:layout_alignParentLeft="@dimen/_20sdp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/cap_icon"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:orientation="vertical">
                    <TextView
                        style="@style/CommonTextWrapcontent"
                        android:textSize="@dimen/_10sdp"
                        android:text="Cocteau"
                        /><TextView
                    style="@style/CommonTextWrapcontent"
                    android:textSize="@dimen/_7sdp"
                    android:text="New York penn"
                    /><TextView
                    style="@style/CommonTextWrapcontent"
                    android:textSize="@dimen/_7sdp"
                    android:drawableLeft="@drawable/walking_icon"
                    android:drawablePadding="@dimen/_5sdp"
                    android:text="45 min | 26km"
                    android:layout_marginBottom="@dimen/_5sdp"
                    />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_6"
                android:layout_below="@id/ll_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape"
                android:layout_marginRight="@dimen/_30sdp"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">
                <ImageView
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/cap_icon"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:orientation="vertical">
                    <TextView
                        style="@style/CommonTextWrapcontent"
                        android:textSize="@dimen/_10sdp"
                        android:text="La Renarde"
                        /><TextView
                    style="@style/CommonTextWrapcontent"
                    android:textSize="@dimen/_7sdp"
                    android:text="Elementary School"
                    /><TextView
                    style="@style/CommonTextWrapcontent"
                    android:textSize="@dimen/_7sdp"
                    android:drawableLeft="@drawable/walking_icon"
                    android:drawablePadding="@dimen/_5sdp"
                    android:text="45 min | 26km"
                    android:layout_marginBottom="@dimen/_5sdp"
                    />
                    
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>