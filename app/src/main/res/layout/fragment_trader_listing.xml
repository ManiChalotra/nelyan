<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    tools:context=".fragments.TraderListingFragment">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        >
        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/left_arrow"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/_10sdp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">
            <TextView
                style="@style/HeaderText"
                android:textColor="@color/black"
                android:text="Trader / Artisant"/> <TextView
                style="@style/HeaderText"
            android:textSize="@dimen/_12sdp"
            android:layout_gravity="center"
                android:textColor="@color/black"
                android:text="Maisons-Laffitle"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/ivMap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/_10sdp"
            android:src="@drawable/location_circle"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_below="@id/header">
        <TextView
            android:id="@+id/tvFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:background="@drawable/text_outlinebg"
            android:fontFamily="@font/bold"
            android:paddingLeft="@dimen/_20sdp"
            android:paddingTop="@dimen/_2sdp"
            android:paddingRight="@dimen/_20sdp"
            android:paddingBottom="@dimen/_2sdp"
            android:text="Filter"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:id="@+id/rl_1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/ll_pass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"

                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/img_1"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >
                            <TextView
                                style="@style/CommonTextWrapcontent"
                                android:text="Lorem ipsum"
                                android:textColor="@color/app"
                                android:layout_alignParentLeft="true"
                                android:layout_centerInParent="true"
                                android:textSize="@dimen/_14sdp"
                                android:fontFamily="@font/semibold"/>
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/heart_purple"
                                android:layout_alignParentEnd="true"
                                />
                        </RelativeLayout>
                        <TextView
                            android:id="@+id/hair"
                            style="@style/CommonTextWrapcontent"
                            android:text="Hairdresser and well-being"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:textSize="@dimen/_11sdp"
                            android:gravity="center"
                            android:textColor="@color/black"/>
                        <TextView
                            android:id="@+id/name"
                            style="@style/CommonTextWrapcontent"
                            android:text="admin@gmail.com"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:textSize="@dimen/_8sdp"
                            android:gravity="center"
                            android:drawableLeft="@drawable/phone_icon"
                            android:drawablePadding="@dimen/_5sdp"
                            android:textColor="@color/black"/>
                        <TextView
                            android:id="@+id/phone"
                            style="@style/CommonTextWrapcontent"
                            android:text="+123-456-789"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:textSize="@dimen/_8sdp"
                            android:gravity="center"
                            android:drawableLeft="@drawable/phone_icon"
                            android:drawablePadding="@dimen/_5sdp"
                            android:textColor="@color/black"/>
                        <TextView
                            android:id="@+id/currently"
                            style="@style/CommonTextWrapcontent"
                            android:text="Currently Opening"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:textSize="@dimen/_8sdp"
                            android:gravity="center"
                            android:drawableLeft="@drawable/line_clock"
                            android:drawablePadding="@dimen/_5sdp"
                            android:textColor="@color/green"/>
                    </LinearLayout>

                </LinearLayout>
                <TextView
                    style="@style/CommonTextWrapcontent"
                    android:textSize="@dimen/_9sdp"
                    android:drawableLeft="@drawable/location_black"
                    android:drawablePadding="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:gravity="center"
                    android:drawableRight="@drawable/colored_map"
                    android:textColor="@color/black"
                    android:fontFamily="@font/semibold"
                    android:text="43 bis rue du Marechal Foch, Maisons-Laffitte"/>
                <TextView
                    style="@style/CommonTextMatchparent"
                    android:textSize="@dimen/_9sdp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="During the summer, many cities show movies in the park.\nBring a blarker snacks a light sweater,and enjoy the\nmagie of cinema."/>
            </LinearLayout>
        </RelativeLayout> <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:id="@+id/rl_2">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"

                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/img_1"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                style="@style/CommonTextWrapcontent"
                                android:text="Lorem ipsum"
                                android:textColor="@color/app"
                                android:layout_alignParentLeft="true"
                                android:layout_centerInParent="true"
                                android:textSize="@dimen/_14sdp"
                                android:fontFamily="@font/semibold"/>
                            <ImageView
                                android:id="@+id/ivHeart"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/heart_purple"
                                android:layout_alignParentEnd="true"
                                />
                        </RelativeLayout>
                        <TextView
                            style="@style/CommonTextWrapcontent"
                            android:text="Hairdresser and well-being"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:textSize="@dimen/_11sdp"
                            android:gravity="center"
                            android:textColor="@color/black"/>
                        <TextView
                            android:id="@+id/email"
                            style="@style/CommonTextWrapcontent"
                            android:text="admin@gmail.com"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:textSize="@dimen/_8sdp"
                            android:gravity="center"
                            android:drawableLeft="@drawable/phone_icon"
                            android:drawablePadding="@dimen/_5sdp"
                            android:textColor="@color/black"/>
                        <TextView

                            style="@style/CommonTextWrapcontent"
                            android:text="+123-456-789"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:textSize="@dimen/_8sdp"
                            android:gravity="center"
                            android:drawableLeft="@drawable/phone_icon"
                            android:drawablePadding="@dimen/_5sdp"
                            android:textColor="@color/black"/>
                        <TextView
                            android:id="@+id/closed"
                            style="@style/CommonTextWrapcontent"
                            android:text="Currently Closed"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:textSize="@dimen/_8sdp"
                            android:gravity="center"
                            android:drawableLeft="@drawable/line_clock"
                            android:drawablePadding="@dimen/_5sdp"
                            android:textColor="@color/red"/>
                    </LinearLayout>

                </LinearLayout>
                <TextView
                    style="@style/CommonTextWrapcontent"
                    android:textSize="@dimen/_9sdp"
                    android:drawableLeft="@drawable/location_black"
                    android:drawablePadding="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:drawableRight="@drawable/colored_map"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:fontFamily="@font/semibold"
                    android:text="43 bis rue du Marechal Foch, Maisons-Laffitte"/>

                <TextView
                    style="@style/CommonTextMatchparent"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:text="During the summer, many cities show movies in the park.\nBring a blarker snacks a light sweater,and enjoy the\nmagie of cinema."
                    android:textColor="@color/black"
                    android:textSize="@dimen/_9sdp" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>