<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <import type="android.view.View"/>
        <variable
            name="model"
            type="com.nelyanlive.chat.ChatData" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/llSender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tvDate"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            setMessageListTime="@{model.created}"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp"
            android:gravity="center"
            android:visibility="@{model.dateShown ? View.VISIBLE : View.GONE}"
            android:text=""
            android:paddingBottom="@dimen/_2sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivSender"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:padding="3dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:scaleType="centerCrop"
            setChatImage="@{model.senderImage}"
            android:onClick="@{(view)->model.onItemClickChat.onClick(view,model.adapterPosition,`chat`)}"
            android:src="@drawable/placeholder"
            app:layout_constraintBottom_toBottomOf="@id/clReceiver"
            app:layout_constraintStart_toStartOf="parent"
            />
        <TextView
            android:id="@+id/tvSenderName"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_12sdp"
            android:layout_marginBottom="-10dp"
            android:background="@drawable/chattext"
            android:backgroundTint="@color/colorAccent"
            android:gravity="center"
            android:maxWidth="@dimen/_30sdp"
            android:maxLines="1"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:maxLength="15"
            android:padding="1dp"
            android:text="@{model.senderName}"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/_4sdp"
            app:layout_constraintBottom_toBottomOf="@id/ivSender"
            app:layout_constraintEnd_toEndOf="@+id/ivSender"
            app:layout_constraintStart_toStartOf="@id/ivSender"
            app:layout_constraintTop_toBottomOf="@+id/ivSender" />

        <!--
                <TextView
                    android:id="@+id/tvSenderName"
                    android:layout_height="@dimen/_12sdp"
                    android:layout_width="@dimen/_12sdp"
                    android:textAllCaps="true"
                    android:text="@{model.senderName}"
                    android:maxLength="2"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_5sdp"
                    android:background="@drawable/location_circle"
                    android:backgroundTint="@color/colorAccent"
                    android:gravity="center"
                    app:layout_constraintBottom_toBottomOf="@id/ivSender"
                    app:layout_constraintEnd_toEndOf="@id/ivSender"
                    />
        -->


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clReceiver"
            android:layout_width="wrap_content"
            android:minWidth="@dimen/_120sdp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvDate"
            app:layout_constraintBottom_toTopOf="@id/tvSenderTime"
            app:layout_constraintStart_toEndOf="@id/ivSender"
            android:background="@drawable/chat"
            android:onClick="@{(view)->model.onItemClickChat.onClick(view,model.adapterPosition,`fullscreen`)}"
            android:padding="@dimen/_1sdp"
            android:layout_marginStart="@dimen/_12sdp"
            >

            <ImageView
                android:id="@+id/arrowRight"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:onClick="@{(view)->model.onItemClickChat.onClick(view,model.adapterPosition,`arrayreply`)}"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/down_arrow"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/white" />

            <ImageView
                android:id="@+id/imageLeft"
                setChatMessages="@{model.message}"
                android:layout_width="0dp"
                android:layout_height="@dimen/_110sdp"
                android:layout_marginStart="@dimen/_4sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginBottom="@dimen/_4sdp"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toStartOf="@+id/arrowRight"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvReceiverWithImageRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_3sdp"
                android:maxWidth="200dp"
                android:minWidth="80dp"
                android:padding="2dp"
                android:text="@{model.description}"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:visibility="@{model.description.equals(``) ? View.GONE : View.VISIBLE}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageLeft" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:onClick="@{(view)->model.onItemClickChat.onClick(view,model.adapterPosition,`flag`)}"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/flag_icon"
            android:visibility="@{model.isFlag.equals(``) ? View.GONE : View.VISIBLE}"
            app:layout_constraintBottom_toBottomOf="@id/clReceiver"
            app:layout_constraintStart_toEndOf="@id/clReceiver" />


        <TextView
            android:id="@+id/tvSenderTime"
            setMessageTime="@{model.created}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/clReceiver" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>