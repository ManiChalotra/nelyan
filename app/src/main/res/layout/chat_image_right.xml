<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="model"
            type="com.nelyanlive.chat.ChatData" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/llReceiver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvDate"
            setMessageListTime="@{model.created}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="@dimen/_2sdp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp"
            android:visibility="@{model.dateShown ? View.VISIBLE : View.GONE}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivReceiver"
            setChatImage="@{model.senderImage}"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:padding="3dp"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder"
            app:layout_constraintBottom_toBottomOf="@id/clReceiver"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvReceiverName"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_12sdp"
            android:layout_marginBottom="-10dp"
            android:background="@drawable/chattext"
            android:backgroundTint="@color/colorAccent"
            android:gravity="center"
            android:maxWidth="@dimen/_30sdp"
            android:includeFontPadding="false"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="1dp"
            android:text="@{model.senderName}"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/_4sdp"
            app:layout_constraintBottom_toBottomOf="@id/ivReceiver"
            app:layout_constraintEnd_toEndOf="@+id/ivReceiver"
            app:layout_constraintStart_toStartOf="@id/ivReceiver"
            app:layout_constraintTop_toBottomOf="@+id/ivReceiver" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clReceiver"
            android:layout_width="wrap_content"
            android:minWidth="@dimen/_120sdp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10sdp"
            android:background="@drawable/rightchat"
            android:onClick="@{(view)->model.onItemClickChat.onClick(view,model.adapterPosition,`fullscreen`)}"
            android:padding="@dimen/_1sdp"
            app:layout_constraintEnd_toStartOf="@id/ivReceiver"
            app:layout_constraintTop_toBottomOf="@id/tvDate">

            <ImageView
                android:id="@+id/image_right"
                setChatMessages="@{model.message}"
                android:layout_width="0dp"
                android:layout_height="@dimen/_110sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:scaleType="centerCrop"
                android:layout_marginHorizontal="@dimen/_2sdp"
                app:layout_constraintBottom_toTopOf="@+id/tvReceiverWithImageRight"
                app:layout_constraintEnd_toStartOf="@id/tvReceiver"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvReceiver"
                setDrawableTint="@{model}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableEnd="@drawable/blue_double_check"
                android:textSize="14dp"
                android:visibility="@{model.isFlag.equals(``) ? View.VISIBLE : View.GONE}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/tvReceiverWithImageRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:maxWidth="200dp"
                android:minWidth="80dp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:padding="2dp"
                android:textIsSelectable="true"
                android:text="@{model.description}"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:visibility="@{model.description.equals(``) ? View.GONE : View.VISIBLE}"
                app:layout_constraintEnd_toStartOf="@+id/tvReceiver"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/image_right" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/imageselec"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:onClick="@{(view)->model.onItemClickChat.onClick(view,model.adapterPosition,`delete`)}"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/dlt_icon_red"
            android:visibility="@{model.isFlag.equals(``) ? View.GONE : View.VISIBLE}"
            app:layout_constraintBottom_toBottomOf="@id/clReceiver"
            app:layout_constraintEnd_toStartOf="@id/clReceiver" />

        <ImageView
            android:id="@+id/arrowRight"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:onClick="@{(view)->model.onItemClickChat.onClick(view,model.adapterPosition,`arrayreply`)}"
            android:padding="@dimen/_5sdp"
            android:visibility="@{model.isFlag.equals(``) ? View.GONE : View.VISIBLE}"
            android:src="@drawable/leftarrow"
            app:layout_constraintBottom_toBottomOf="@+id/imageselec"
            app:layout_constraintEnd_toStartOf="@+id/imageselec"
            app:layout_constraintTop_toTopOf="@+id/imageselec"
            app:tint="@color/black" />

        <TextView
            android:id="@+id/tvReceiverTime"
            setMessageTime="@{model.created}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="8dp"
            android:text=""
            app:layout_constraintTop_toBottomOf="@+id/clReceiver"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/clReceiver" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
