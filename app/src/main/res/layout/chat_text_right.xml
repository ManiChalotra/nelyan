<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools"
    android:clickable="true">

    <data>

        <import type="android.view.View" />

        <variable
            name="model"
            type="com.nelyanlive.chat.ChatData" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/llReceiver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"

        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textIsSelectable="true"
            app:layout_constraintBottom_toBottomOf="@+id/relativRight"
            app:layout_constraintTop_toTopOf="@+id/relativRight" />

        <TextView
            android:id="@+id/tvDate"
            setMessageListTime="@{model.created}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="@dimen/_2sdp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp"
            android:visibility="@{model.dateShown ? View.VISIBLE : View.GONE}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivReceiver"
            setChatImage="@{model.senderImage}"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:padding="3dp"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder"
            app:layout_constraintBottom_toBottomOf="@id/relativRight"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvReceiverName"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_12sdp"
            android:layout_marginBottom="-10dp"
            android:background="@drawable/chattext"
            android:backgroundTint="@color/colorAccent"
            android:ellipsize="end"
            android:gravity="center"
            android:includeFontPadding="false"
            android:maxWidth="@dimen/_30sdp"
            android:maxLines="1"
            android:padding="1dp"
            android:text="@{model.senderName}"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/_4sdp"
            app:layout_constraintBottom_toBottomOf="@id/ivReceiver"
            app:layout_constraintEnd_toEndOf="@+id/ivReceiver"
            app:layout_constraintStart_toStartOf="@id/ivReceiver"
            app:layout_constraintTop_toBottomOf="@+id/ivReceiver" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/relativRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/_10sdp"
            android:background="@drawable/rightchat"
            app:layout_constraintBottom_toTopOf="@id/tvReceiverTime"
            app:layout_constraintEnd_toStartOf="@id/ivReceiver"
            app:layout_constraintTop_toBottomOf="@+id/tvDate">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/Relativreplyr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@drawable/rightchat"
                android:backgroundTint="@color/lightgrey"
                android:onClick="@{(view)->model.onItemClickChat.onClick(view,model.adapterPosition,`replyclick`)}"
                android:padding="@dimen/_2sdp"
                android:visibility="@{model.parentId.equals(`0`) ? View.GONE : View.VISIBLE}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tvReceiverRelplaymessageusername"
                    setDrawableTint="@{model}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:includeFontPadding="false"
                    android:maxWidth="200dp"
                    android:minWidth="80dp"
                    android:text="@{model.senderName}"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/_10sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvReceiverRelplaymessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:includeFontPadding="false"
                    android:maxWidth="200dp"
                    android:minWidth="80dp"
                    android:onClick="@{(view)->model.onItemClickChat.onClick(view,model.adapterPosition,`replyclick`)}"
                    android:text="@{model.parentmessage}"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_8sdp"
                    android:visibility="@{model.parentmessageType.equals(`0`) ? View.VISIBLE : View.GONE}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvReceiverRelplaymessageusername"
                    bind:setChatMText="@{model.parentmessage}" />

                <ImageView
                    setChatMessages="@{model.parentmessage}"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:visibility="@{model.parentmessageType.equals(`1`) ? View.VISIBLE : View.GONE}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvReceiverRelplaymessageusername">

                </ImageView>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tvReceiver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:maxWidth="200dp"
                android:minWidth="80dp"
                android:padding="8dp"
                android:paddingVertical="@dimen/_8sdp"
                android:paddingStart="@dimen/_8sdp"
                android:paddingEnd="@dimen/_2sdp"
                android:text="@{model.message}"
                android:textColor="@color/black"
                android:textIsSelectable="true"
                android:textSize="14dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Relativreplyr"
                bind:setChatMText="@{model.message}" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:onClick="@{(view)->model.onItemClickChat.onClick(view,model.adapterPosition,`delete`)}"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/dlt_icon_red"
            app:layout_constraintBottom_toBottomOf="@+id/relativRight"
            app:layout_constraintEnd_toStartOf="@+id/relativRight"
            app:layout_constraintTop_toTopOf="@+id/relativRight" />
        <!--        android:visibility="@{model.isFlag.equals(``) ? View.GONE : View.VISIBLE}"-->

        <ImageView
            android:id="@+id/arrowRight"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:onClick="@{(view)->model.onItemClickChat.onClick(view,model.adapterPosition,`arrayreply`)}"
            android:src="@drawable/leftarrow"
            android:visibility="@{model.isFlag.equals(``) ? View.GONE : View.VISIBLE}"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            app:layout_constraintEnd_toStartOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="@+id/imageView2"
            app:tint="@color/black" />

        <TextView
            android:id="@+id/tvReceiverTime"
            setMessageTime="@{model.created}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/relativRight"
            app:layout_constraintTop_toBottomOf="@+id/relativRight" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
