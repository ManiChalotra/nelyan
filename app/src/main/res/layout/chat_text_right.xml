<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>
        <variable
            name="model"
            type="com.nelyanlive.chat.ChatData" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/llReceiver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <TextView
            android:id="@+id/tvDate"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            setMessageListTime="@{model.created}"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp"
            android:gravity="center"
            android:visibility="@{model.dateShown ? View.VISIBLE : View.GONE}"
            android:text=""
            android:paddingBottom="@dimen/_2sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"


            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivReceiver"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:padding="3dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="20dp"
            android:scaleType="centerCrop"
            setChatImage="@{model.senderImage}"
            android:src="@drawable/placeholder"
            app:layout_constraintBottom_toBottomOf="@id/relativRight"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <TextView
            android:id="@+id/tvReceiverName"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_12sdp"
            android:layout_marginBottom="-10dp"
            android:background="@drawable/chattext"
            android:backgroundTint="@color/colorAccent"
            android:gravity="center"
            android:maxWidth="@dimen/_30sdp"
            android:includeFontPadding="false"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="1dp"
            android:text="@{model.senderName}"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/_4sdp"
            app:layout_constraintBottom_toBottomOf="@id/ivReceiver"
            app:layout_constraintEnd_toEndOf="@+id/ivReceiver"
            app:layout_constraintStart_toStartOf="@id/ivReceiver"
            app:layout_constraintTop_toBottomOf="@+id/ivReceiver" />


        <RelativeLayout
            android:id="@+id/relativRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/rightchat"
            android:layout_marginEnd="@dimen/_10sdp"
            app:layout_constraintBottom_toTopOf="@id/tvReceiverTime"
            app:layout_constraintEnd_toStartOf="@id/ivReceiver"
            app:layout_constraintTop_toTopOf="@+id/ivReceiver">

            <ImageView
                android:id="@+id/arrowRight"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_marginStart="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:onClick="@{(view)->model.onItemClickChat.onClick(view,model.adapterPosition,`arrayreply`)}"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/down_arrow"
                app:layout_constraintEnd_toStartOf="@+id/tvReceiver"
                app:layout_constraintTop_toTopOf="@+id/tvReceiver"
                app:tint="@color/black" />

            <TextView
                android:id="@+id/tvReceiverRelplaymessage"
                setDrawableTint="@{model}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_toEndOf="@+id/arrowRight"
                android:includeFontPadding="false"
                android:maxWidth="200dp"
                android:minWidth="80dp"
                android:background="@color/verylitgray"
                android:padding="2dp"
                android:gravity="end"
                android:text="@{model.parentmessage}"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:visibility="@{model.parentId.equals(`0`) ? View.GONE : View.VISIBLE}" />

            <TextView
                android:id="@+id/tvReceiver"
                setDrawableTint="@{model}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_toEndOf="@+id/arrowRight"
                android:drawableEnd="@drawable/blue_double_check"
                android:maxWidth="200dp"
                android:minWidth="80dp"
                android:padding="8dp"
                android:layout_below="@+id/tvReceiverRelplaymessage"
                android:text="@{model.message}"
                android:textColor="@color/black"
                android:textSize="14dp" />
        </RelativeLayout>





        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            app:layout_constraintTop_toTopOf="@id/relativRight"
            app:layout_constraintBottom_toBottomOf="@id/relativRight"
            app:layout_constraintEnd_toStartOf="@id/relativRight"
            android:src="@drawable/dlt_icon_red"
            android:padding="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:visibility="@{model.isFlag.equals(``) ? View.GONE : View.VISIBLE}"
            android:onClick="@{(view)->model.onItemClickChat.onClick(view,model.adapterPosition,`delete`)}"
            />


        <TextView
            android:id="@+id/tvReceiverTime"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            setMessageTime="@{model.created}"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/relativRight"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/relativRight"
            android:textSize="8dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
