<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:clickable="true"
    tools:context=".ui.ActivityFragmentActivity">
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        >
        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/left_arrow"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/_10sdp"
            />
        <TextView
            style="@style/HeaderText"
            android:layout_centerInParent="true"
            android:textColor="@color/black"
            android:text="Activity"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_30sdp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_20sdp"
        android:orientation="vertical"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_below="@id/header">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:orientation="horizontal">
            <EditText
                android:layout_width="0dp"
                android:layout_weight="60"
                android:layout_height="wrap_content"
                android:textColorHint="@color/grey"
                android:textColor="@color/black"
                android:maxLines="1"
                android:fontFamily="@font/regular"
                android:backgroundTint="@color/transparent"
                android:hint="Maisons-Laffitle"
                android:layout_marginRight="@dimen/_10sdp"
                android:drawableRight="@drawable/blk_cross"
                android:textSize="@dimen/_12sdp"
                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="35"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
             >

                <Spinner
                    android:id="@+id/orderby1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:autofillHints="date"
                    android:dropDownHeight="100dp"
                    android:fontFamily="@font/regular"
                    android:gravity="start"
                    android:hint="Date Added"
                    android:spinnerMode="dropdown" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal">
            <View
                android:layout_width="0dp"
                android:layout_weight="60"
                android:layout_height="1dp"
                android:layout_marginRight="@dimen/_10sdp"
                android:background="@color/black"
                />
            <View
                android:layout_width="0dp"
                android:layout_weight="30"
                android:layout_height="1dp"
              android:background="@color/black"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/_14sdp"
                android:layout_height="@dimen/_14sdp"
                android:src="@drawable/around_me_icon"/>
            <TextView
                style="@style/CommonTextWrapcontent"
                android:paddingLeft="@dimen/_10sdp"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black"
                android:text="Around me"/>
        </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="horizontal">
    <ImageView
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_15sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_3sdp"
        android:src="@drawable/location_grey"/>
    <EditText
        style="@style/SimpleEdittext"
        android:textSize="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_10sdp"
      android:paddingLeft="@dimen/_10sdp"
        android:textColor="@color/black"
        android:backgroundTint="@color/transparent"
        android:hint="Filter sur une activite"/>
</LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@color/black"/>
        <TextView
          style="@style/CommonTextWrapcontent"
            android:textSize="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_20sdp"
        android:textColor="@color/black"
                android:text="Events by Date"/>

            <TextView
                android:id="@+id/tvCal"
                style="@style/CommonTextMatchparent"
                android:background="@color/transparent"
                android:textColor="@color/black"
                android:maxLines="1"
                android:drawableRight="@drawable/calendar_icon"
                android:layout_marginTop="5dp"
                android:textColorHint="@color/grey"
                android:hint="Events by Date"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@color/black"/>
        <TextView
          style="@style/CommonTextWrapcontent"
            android:textSize="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_20sdp"
        android:textColor="@color/black"
                android:text="Type of activities"/>
        <Spinner
            android:id="@+id/orderby"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:layout_marginTop="@dimen/_6sdp"
            android:fontFamily="@font/regular"
            android:gravity="start"
            android:dropDownSelector="@drawable/down_arrow"
            android:hint="Date Added"
            android:inputType="text"
            android:autofillHints="date"
            android:spinnerMode="dropdown" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@color/black"/>
        <Button
            android:id="@+id/btnFilter"
            style="@style/Button"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/_70sdp"
            android:background="@drawable/btn"
            android:text="FILTER"/>
    </LinearLayout>
    </ScrollView>
</RelativeLayout>