<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.TraderActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/_10sdp"
            android:src="@drawable/left_arrow" />

        <TextView
            style="@style/HeaderText"
            android:layout_centerInParent="true"
            android:text="Trader / Artisant"
            android:textColor="@color/black" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp">
        <TextView
            style="@style/CommonTextWrapcontent"
            android:text="Photo/Video" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_90sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/back_shape">

            <ImageView
                android:id="@+id/ivImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:backgroundTint="@color/grey"
                android:src="@drawable/camera_icon" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="@drawable/back_shape" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginLeft="@dimen/_3sdp"
                android:layout_weight="1"
                android:background="@drawable/back_shape" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/_3sdp"

                android:background="@drawable/back_shape" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginLeft="@dimen/_3sdp"
                android:layout_weight="1"
                android:background="@drawable/back_shape" />
        </LinearLayout>
        <TextView
            style="@style/CommonTextWrapcontent"
            android:layout_marginTop="@dimen/_15sdp"
            android:text="Type of Trader"/>
        <Spinner
            android:id="@+id/orderby"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:layout_marginTop="@dimen/_8sdp"
            android:fontFamily="@font/regular"
            android:gravity="start"
            android:dropDownSelector="@drawable/down_arrow"
            android:hint="Date Added"
            android:inputType="text"
            android:autofillHints="date"
            android:spinnerMode="dropdown"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:textSize="@dimen/_10sdp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/_2sdp"
            android:background="@color/black"/>
        <TextView
            style="@style/CommonTextWrapcontent"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Name of Shop"/>
        <EditText
            style="@style/SimpleEdittext"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:inputType="text"
            android:hint="Name of Shop"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"/>
         <TextView
            style="@style/CommonTextWrapcontent"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Name of Activity"/>
        <EditText
            style="@style/SimpleEdittext"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:inputType="text"
            android:hint="Name of Activity"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"/>
        <TextView
            style="@style/CommonTextWrapcontent"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Description"/>
        <EditText
            style="@style/SimpleEdittext"
            android:hint="Description"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"/>
        <TextView
            style="@style/CommonTextWrapcontent"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Address"/>
        <EditText
            style="@style/SimpleEdittext"
            android:drawablePadding="@dimen/_10sdp"
            android:hint="Address"
            android:drawableLeft="@drawable/location_grey"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@color/black"/> <TextView
            style="@style/CommonTextWrapcontent"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Mobile"/>
        <EditText
            style="@style/SimpleEdittext"
            android:drawablePadding="@dimen/_10sdp"
            android:hint="Mobile"
        android:inputType="number"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@color/black"/>
        <TextView
            style="@style/CommonTextWrapcontent"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Email Address"/>
        <EditText
            style="@style/SimpleEdittext"
            android:hint="Email Address"
            android:inputType="textWebEmailAddress"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@color/black"/>
        <TextView
            style="@style/CommonTextWrapcontent"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Website"/>
        <EditText
            style="@style/SimpleEdittext"
            android:hint="Website"
            android:inputType="text"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@color/black"/>
        <TextView
            style="@style/CommonTextWrapcontent"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Select Day"/>
        <Spinner
            android:id="@+id/orderby1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:layout_marginTop="@dimen/_6sdp"
            android:fontFamily="@font/regular"
            android:gravity="start"
            android:dropDownSelector="@drawable/down_arrow"
            android:hint="Date Added"
            android:inputType="text"
            android:autofillHints="date"
            android:spinnerMode="dropdown"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:textSize="@dimen/_10sdp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@color/black"/>
        <TextView
            style="@style/CommonTextWrapcontent"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Select Time"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    style="@style/CommonTextWrapcontent"
                    android:layout_gravity="center"
                    android:text="From:"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/edClo"
                        style="@style/CommonTextMatchparent"
                        android:inputType="number"
                        android:paddingLeft="@dimen/_5sdp"
                        android:drawableRight="@drawable/clock_purple_icon"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:textColor="@color/black"
                        android:textColorHint="@color/grey"
                        android:hint="Select From"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"

                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@color/black"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/_5sdp"
                android:orientation="horizontal">
                <TextView
                    style="@style/CommonTextWrapcontent"
                    android:layout_gravity="center"
                    android:text="To:"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/edClo1"
                        style="@style/CommonTextMatchparent"
                        android:inputType="number"
                        android:paddingLeft="@dimen/_5sdp"
                        android:drawableRight="@drawable/clock_purple_icon"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:textColorHint="@color/grey"
                        android:textColor="@color/black"
                        android:hint="Select To"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@color/black"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">
            <TextView
                style="@style/CommonTextWrapcontent"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Select Time"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <TextView
                        style="@style/CommonTextWrapcontent"
                        android:layout_gravity="center"
                        android:text="From:"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/edClo2"
                            style="@style/CommonTextMatchparent"
                            android:inputType="number"
                            android:paddingLeft="@dimen/_5sdp"
                            android:drawableRight="@drawable/clock_purple_icon"
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"
                            android:textColor="@color/black"
                            android:textColorHint="@color/grey"
                            android:hint="Select From"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"

                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@color/black"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:orientation="horizontal">
                    <TextView
                        style="@style/CommonTextWrapcontent"
                        android:layout_gravity="center"
                        android:text="To:"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/edClo3"
                            style="@style/CommonTextMatchparent"
                            android:inputType="number"
                            android:paddingLeft="@dimen/_5sdp"
                            android:drawableRight="@drawable/clock_purple_icon"
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"
                            android:textColorHint="@color/grey"
                            android:textColor="@color/black"
                            android:hint="Select To"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@color/black"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/rlAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp">
            <TextView
                style="@style/CommonTextWrapcontent"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:textSize="@dimen/_10sdp"
                android:drawablePadding="@dimen/_5sdp"
                android:drawableLeft="@drawable/plus_icon"
                android:text="Add"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="30"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/semibold"
                android:text="Monday"
                android:textSize="@dimen/_10sdp"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="70"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:drawableRight="@drawable/cross"
                android:layout_marginLeft="@dimen/_15sdp"
                android:fontFamily="@font/regular"
                android:text="10:30AM-1PM, 2:30AM-6:30PM"
                android:textSize="@dimen/_10sdp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="30"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/semibold"
                android:text="Tuesday"
                android:textSize="@dimen/_10sdp"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="70"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:drawableRight="@drawable/cross"
                android:layout_marginLeft="@dimen/_15sdp"
                android:fontFamily="@font/regular"
                android:text="10:30AM-1PM, 2:30AM-6:30PM"
                android:textSize="@dimen/_10sdp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="30"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/semibold"
                android:text="Wednesday"
                android:textSize="@dimen/_10sdp"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="70"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginLeft="@dimen/_15sdp"
                android:fontFamily="@font/regular"
                android:drawableRight="@drawable/cross"
                android:text="10:30AM-1PM, 2:30AM-6:30PM"
                android:textSize="@dimen/_10sdp" />
        </LinearLayout>
        <TextView
            style="@style/CommonTextWrapcontent"
            android:layout_marginTop="@dimen/_10sdp"
            android:textSize="@dimen/_14sdp"
            android:fontFamily="@font/bold"
            android:text="Product Detail"/>
        <TextView
            style="@style/CommonTextWrapcontent"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Add Product Image"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_90sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/back_shape">

            <ImageView
                android:id="@+id/ivCam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:backgroundTint="@color/grey"
                android:src="@drawable/camera_icon" />
        </RelativeLayout>
        <TextView
            style="@style/CommonTextWrapcontent"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Product Title"/>
        <EditText
            style="@style/SimpleEdittext"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:inputType="text"
            android:hint="Product Title"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"/>
        <TextView
            style="@style/CommonTextWrapcontent"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Product Price"/>
        <EditText
            style="@style/SimpleEdittext"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:inputType="number"
            android:hint="Product Price"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"/>
        <TextView
            style="@style/CommonTextWrapcontent"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Description"/>
        <EditText
            style="@style/SimpleEdittext"
            android:hint="Description"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"/>
        <LinearLayout
            android:id="@+id/llDes"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                style="@style/CommonTextWrapcontent"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Description"/>
            <EditText
                style="@style/SimpleEdittext"
                android:hint="Description"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp">
            <TextView
                android:id="@+id/tvAdd"
                style="@style/CommonTextWrapcontent"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:drawablePadding="@dimen/_5sdp"
                android:textSize="@dimen/_10sdp"
                android:drawableLeft="@drawable/plus_icon"
                android:text="Add"/>
        </RelativeLayout>
        <Button
            android:id="@+id/btnSubmit"
            style="@style/Button"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:background="@drawable/btn"
            android:text="SUBMIT"/>
    </LinearLayout>
    </LinearLayout>

</ScrollView>