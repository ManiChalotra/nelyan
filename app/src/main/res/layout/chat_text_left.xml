<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <import type="android.view.View"/>
        <variable
            name="model"
            type="com.nelyanlive.chat.ChatData"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/llSender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >
        <TextView
            android:id="@+id/tvDate"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            setMessageListTime="@{model.created}"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp"
            android:gravity="center"
            android:visibility="@{model.dateShown ? View.VISIBLE : View.GONE}"
            android:text=""
            android:paddingBottom="@dimen/_2sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivSender"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:padding="3dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:scaleType="centerCrop"
            setChatImage="@{model.senderImage}"
            android:onClick="@{(view)->model.onItemClickChat.onClick(view,model.adapterPosition,`chat`)}"
            android:src="@drawable/placeholder"
            app:layout_constraintBottom_toBottomOf="@id/relativLeft"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/tvSenderName"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_12sdp"
            android:layout_marginBottom="-10dp"
            android:background="@drawable/chattext"
            android:backgroundTint="@color/colorAccent"
            android:gravity="center"
            android:maxWidth="@dimen/_30sdp"
            android:maxLines="1"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:maxLength="15"
            android:padding="1dp"
            android:text="@{model.senderName}"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/_4sdp"
            app:layout_constraintBottom_toBottomOf="@id/ivSender"
            app:layout_constraintEnd_toEndOf="@+id/ivSender"
            app:layout_constraintStart_toStartOf="@id/ivSender"
            app:layout_constraintTop_toBottomOf="@+id/ivSender" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/relativLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/chat"
            android:layout_marginStart="@dimen/_10sdp"
            app:layout_constraintBottom_toTopOf="@id/tvSenderTime"
            app:layout_constraintStart_toEndOf="@+id/ivSender"
            app:layout_constraintTop_toBottomOf="@id/tvDate">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/Relativreplyr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/chat"
                android:backgroundTint="@color/lightgrey"
                android:layout_margin="1dp"
                android:padding="@dimen/_2sdp"
                android:clickable="true"
                android:onClick="@{(view)->model.onItemClickChat.onClick(view,model.adapterPosition,`replyclick`)}"
                android:visibility="@{model.parentId.equals(`0`) ? View.GONE : View.VISIBLE}">

                <TextView
                    android:id="@+id/tvReceiverRelplaymessageusername"
                    setDrawableTint="@{model}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:includeFontPadding="false"
                    android:maxWidth="200dp"
                    android:minWidth="80dp"
                    android:text="@{model.senderName}"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/_10sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvReceiverRelplaymessage"
                    setDrawableTint="@{model}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:includeFontPadding="false"
                    android:maxWidth="200dp"
                    android:textIsSelectable="true"
                    android:minWidth="80dp"
                    android:text="@{model.parentmessage}"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_8sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvReceiverRelplaymessageusername" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tvSender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/Relativreplyr"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_gravity="center"
                android:maxWidth="200dp"
                android:textIsSelectable="true"
                android:minWidth="80dp"
                android:paddingVertical="@dimen/_8sdp"
                android:paddingStart="@dimen/_2sdp"
                android:paddingEnd="@dimen/_2sdp"
                android:text="@{model.message}"
                android:textColor="@color/white"
                android:textSize="14dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_2sdp"
            android:onClick="@{(view)->model.onItemClickChat.onClick(view,model.adapterPosition,`flag`)}"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/flag_icon"
            android:visibility="@{model.isFlag.equals(``) ? View.GONE : View.VISIBLE}"
            app:layout_constraintBottom_toBottomOf="@id/relativLeft"
            app:layout_constraintStart_toEndOf="@id/relativLeft"
            app:layout_constraintTop_toTopOf="@id/relativLeft" />

        <ImageView
            android:id="@+id/arrowRight"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:onClick="@{(view)->model.onItemClickChat.onClick(view,model.adapterPosition,`arrayreply`)}"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/chatrightarrow"
            app:layout_constraintBottom_toBottomOf="@+id/imageView3"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintTop_toTopOf="@+id/imageView3"
            />

        <TextView
            android:id="@+id/tvSenderTime"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            setMessageTime="@{model.created}"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/relativLeft"
            android:textSize="8dp"/>



    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>