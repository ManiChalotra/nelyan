<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".ui.EditProfileActivity">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/header"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp">
                    <ImageView
                        android:id="@+id/ivBack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/left_arrow"
                        android:layout_centerInParent="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        />
                    <TextView
                        style="@style/HeaderText"
                        android:layout_centerInParent="true"
                        android:textColor="@color/black"
                        android:text="Edit Profile"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/header"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="@dimen/_200sdp"
                        android:layout_height="@dimen/_200sdp"
                        android:layout_gravity="center">

                        <RelativeLayout
                            android:id="@+id/rlImg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center">
                            <ImageView
                                android:id="@+id/ivImg"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"/>
                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/iv_profile"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/profile_img">
                            </de.hdodenhof.circleimageview.CircleImageView>
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rlAdd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="@dimen/_20sdp"
                            android:layout_marginRight="@dimen/_30sdp">
                            <ImageView
                                android:id="@+id/ivPlus"
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:src="@drawable/plus" />
                        </RelativeLayout>
                    </RelativeLayout>

                    <TextView
                        style="@style/CommonTextMatchparent"
                        android:text="Name"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/grey"
                        />
                    <EditText
                        style="@style/SimpleEdittext"
                        android:hint="Name"
                        android:text="Jimmy Hilla"
                        android:textColorHint="@color/black"
                        android:textSize="@dimen/_15sdp"
                        android:inputType="text"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/semibold"/>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:background="@color/black"/>
                    <TextView
                        style="@style/CommonTextMatchparent"
                        android:text="Email"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/grey"
                        />
                    <TextView
                        style="@style/CommonTextMatchparent"
                        android:textSize="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:text="jimmy@gmail.com"
                        android:textColor="@color/black"
                        android:fontFamily="@font/semibold"/>
                       <View
                           android:layout_width="match_parent"
                           android:layout_height="1dp"
                           android:layout_marginTop="@dimen/_5sdp"
                           android:background="@color/black"/>
                    <TextView
                        style="@style/CommonTextMatchparent"
                        android:text="City Name"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/grey"
                        />
                    <EditText
                        style="@style/SimpleEdittext"
                        android:hint="City Name"
                        android:textColorHint="@color/black"
                        android:inputType="text"
                        android:textSize="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:text="Masisons-Laffitle"
                        android:textColor="@color/black"
                        android:fontFamily="@font/semibold"/>
                      <View
                          android:layout_width="match_parent"
                          android:layout_height="1dp"
                          android:layout_marginTop="@dimen/_5sdp"
                          android:background="@color/black"/>
                    <TextView
                        style="@style/CommonTextMatchparent"
                        android:text="Types of Utilisation"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/grey"
                        />
                    <EditText
                        style="@style/SimpleEdittext"
                        android:hint="Types of Utilisation"
                        android:textColorHint="@color/black"
                        android:inputType="text"
                        android:textSize="@dimen/_15sdp"
                        android:text="Ex: Post ads"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/semibold"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@color/black"/>
                    <Button
                        style="@style/Button"
                        android:id="@+id/btnSave"
                        android:layout_marginTop="@dimen/_40sdp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="@dimen/_20sdp"
                        android:text="SAVE"
                        android:background="@drawable/btn"/>
                </LinearLayout>

            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>