        <TextView
            style="@style/CommonTextWrapcontent"
            android:layout_marginTop="@dimen/_15sdp"
            android:text="Name of Maternal Assistant"/>
        <EditText
            style="@style/SimpleEdittext"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:inputType="text"
            android:hint="Name of Maternal Assistant"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"/>
        <TextView
            style="@style/CommonTextWrapcontent"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Number of places still avilable"/>
        <Spinner
            android:id="@+id/orderby"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:layout_marginTop="@dimen/_8sdp"
            android:fontFamily="@font/regular"
            android:gravity="start"
            android:dropDownSelector="@drawable/down_arrow"
            android:inputType="text"
            android:autofillHints="date"
            android:spinnerMode="dropdown"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:textSize="@dimen/_10sdp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
          android:layout_marginTop="@dimen/_2sdp"
            android:background="@color/black"/>
        <TextView
            style="@style/CommonTextWrapcontent"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Phone Number"/>
        <EditText
            style="@style/SimpleEdittext"
            android:inputType="number"
            android:hint="Phone Number"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"/> <TextView
        style="@style/CommonTextWrapcontent"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="Address"/>
        <EditText
            style="@style/SimpleEdittext"
            android:hint="Address"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"/><TextView
        style="@style/CommonTextWrapcontent"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="Description"/>
        <EditText
            style="@style/SimpleEdittext"
            android:hint="Description"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"/>
        <Button
            android:id="@+id/btnSubmit"
            style="@style/Button"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:background="@drawable/btn"
            android:text="SUBMIT"/>
    </LinearLayout>
</LinearLayout>
</ScrollView>