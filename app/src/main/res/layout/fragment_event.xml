<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:clickable="true"
    tools:context=".fragments.EventFragment">

    <!-- <include layout="@layout/toolbar"></include>-->

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rl_toolbar_root"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/white">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="@dimen/_12sdp"
            android:src="@drawable/left_arrow"
            android:visibility="visible" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">
            <TextView
                style="@style/HeaderText"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:text="Upcoming Event"/>
            <TextView
                style="@style/HeaderText"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:text="Maisons-Laffitle"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_bell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/_12sdp"
            android:src="@drawable/location_circle"
            android:visibility="visible" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:background="@drawable/text_outlinebg"
            android:fontFamily="@font/bold"
            android:paddingLeft="@dimen/_20sdp"
            android:paddingTop="@dimen/_2sdp"
            android:paddingRight="@dimen/_20sdp"
            android:paddingBottom="@dimen/_2sdp"
            android:text="Filter"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"></View>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:fontFamily="@font/bold"
            android:text="Order by: "
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_20sdp"
            android:layout_gravity="start"
            android:layout_weight="0"
            android:background="@drawable/text_outlinebg"
            android:gravity="center">

            <Spinner
                android:id="@+id/orderby"
                android:layout_width="120dp"
                android:layout_marginTop="-10dp"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:paddingTop="-15dp"
                android:background="@android:color/transparent"

                android:gravity="start"
                android:spinnerMode="dropdown"
                />

            <ImageView
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_gravity="center"
                android:src="@drawable/down_arrow" />

        </LinearLayout>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rc_event"
        android:layout_width="match_parent"

        android:layout_height="match_parent" />

</LinearLayout>