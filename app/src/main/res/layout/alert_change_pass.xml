<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="@dimen/_200sdp"
    android:layout_margin="@dimen/_20sdp"
    android:background="@drawable/alert_shape"
    android:layout_height="wrap_content">
<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/updated_icon"
    android:layout_marginTop="@dimen/_15sdp"
    android:layout_gravity="center"/>
    <TextView
       style="@style/CommonTextMatchparent"
        android:layout_marginTop="@dimen/_8sdp"
        android:textSize="@dimen/_10sdp"
        android:fontFamily="@font/medium"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Your password has been\nchange successfully"/>
    <Button
        android:id="@+id/btnOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/white"
android:backgroundTint="@color/app"
        android:fontFamily="@font/bold"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:text="OK"/>
</LinearLayout>