<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    >

    <com.tuyenmonkey.mkloader.MKLoader
        android:id="@+id/childcare_filter_progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:elevation="@dimen/_5dp"
        android:visibility="gone"
        app:mk_color="@color/colorPrimary"
        app:mk_type="FishSpinner" />


    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="@color/white"
        >
        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/left_arrow"
            android:layout_centerInParent="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/_10sdp"
            />
        <TextView
            style="@style/HeaderText"
            android:layout_centerInParent="true"
            android:textColor="@color/black"
            android:text="@string/child_care"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_20sdp"
        android:orientation="vertical"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_below="@id/header">

        <LinearLayout
            android:id="@+id/ll_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:visibility="gone"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_14sdp"
                android:layout_height="@dimen/_14sdp"
                android:src="@drawable/around_me_icon" />
            <TextView
                style="@style/CommonTextWrapcontent"
                android:paddingStart="@dimen/_10sdp"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black"
                android:text="@string/around_me"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_3sdp"
                android:src="@drawable/location_grey" />

            <TextView
                android:id="@+id/et_location"
                style="@style/SimpleEdittext"
                android:layout_marginTop="@dimen/_10sdp"
                android:backgroundTint="@color/transparent"
                android:hint="@string/enter_location"
                android:paddingStart="@dimen/_10sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@color/black" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/et_name"
                android:layout_width="0dp"
                android:layout_weight="60"
                android:layout_height="wrap_content"
                android:textColorHint="@color/grey"
                android:textColor="@color/black"
                android:maxLines="1"
                android:backgroundTint="@color/transparent"
                android:fontFamily="@font/regular"
                android:hint="@string/enter_name"
                android:layout_marginEnd="@dimen/_10sdp"
                android:drawableEnd="@drawable/blk_cross"
                android:textSize="@dimen/_12sdp"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="35"
                android:gravity="center"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                >
                <Spinner
                    android:id="@+id/spinner_dayss"
                    android:layout_width="0dp"
                    android:layout_weight="35"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:fontFamily="@font/regular"
                    android:gravity="start"
                    android:dropDownSelector="@drawable/down_arrow"
                    android:hint="@string/select_distance"
                    android:inputType="text"
                    android:autofillHints="date"
                    android:spinnerMode="dropdown"
                    tools:ignore="DuplicateIds" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal">
            <View
                android:layout_width="0dp"
                android:layout_weight="60"
                android:layout_height="1dp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="@color/black"
                />
            <View
                android:layout_width="0dp"
                android:layout_weight="30"
                android:layout_height="1dp"
                android:background="@color/black"/>
        </LinearLayout>



        <TextView
            style="@style/CommonTextWrapcontent"
            android:textSize="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:textColor="@color/black"
            android:visibility="visible"
            android:text="@string/select_type"/>
        <Spinner
            android:id="@+id/childType"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:layout_gravity="start"
            android:fontFamily="@font/regular"
            android:layout_marginTop="@dimen/_3sdp"
            android:gravity="start"
            android:dropDownSelector="@drawable/down_arrow"
            android:inputType="text"
            android:spinnerMode="dropdown"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:visibility="visible"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@color/black"/>

    </LinearLayout>
    <Button
        android:id="@+id/btnSearch"
        style="@style/Button"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_70sdp"
        android:background="@drawable/btn"
        android:textAllCaps="true"
        android:text="@string/search"/>
</RelativeLayout>