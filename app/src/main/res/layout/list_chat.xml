<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <ImageView
            android:id="@+id/ivEllicepe"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/chat_img_1"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/chat"
            android:layout_marginLeft="5dp"
            android:padding="@dimen/_10sdp"
            android:layout_marginTop="20dp">

            <TextView
                style="@style/CommonTextWrapcontent"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_5sdp"
                android:textColor="@color/white"
                android:text="Hello, Shuri?"
                android:textSize="@dimen/_11sdp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout1"
        android:background="@drawable/chat"
        android:layout_marginLeft="@dimen/_45sdp"
        android:layout_marginTop="10dp"
        >
        <TextView
            style="@style/CommonTextWrapcontent"
            android:text="How can i help you?"
            android:textSize="@dimen/_11sdp"
            android:paddingEnd="@dimen/_20sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:paddingTop="@dimen/_10sdp"
            android:layout_gravity="right"
            android:textColor="@color/white"

            />
    </LinearLayout>
    <TextView
       style="@style/CommonTextWrapcontent"
        android:textColor="@color/black"
        android:textSize="@dimen/_6sdp"
        android:layout_marginLeft="@dimen/_45sdp"
        android:layout_marginTop="@dimen/_3sdp"
        android:text="2:03pm"/>
    <RelativeLayout
        android:id="@+id/layout4"
        android:layout_below="@id/time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_50sdp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:background="@drawable/rightchat"
                android:padding="@dimen/_10sdp"
                android:layout_marginTop="20dp">
                <TextView
                    style="@style/CommonTextWrapcontent"
                    android:text="Hello, James!"
                    android:textColor="@color/black"
                    android:drawablePadding="@dimen/_5sdp"
                    android:drawableRight="@drawable/blue_double_check"
                    android:textSize="@dimen/_11sdp" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/ivChatGirl"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="20dp"
                android:scaleType="fitXY"
                android:layout_alignParentRight="true"
                android:src="@drawable/chat_img_1"></ImageView>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout4">
        <RelativeLayout
            android:id="@+id/layout5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rightchat"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="@dimen/_50sdp"
            >
            <TextView
                style="@style/CommonTextWrapcontent"
                android:text="Aenen dui metus, lobortis qu\ninterdum urna"
                android:textSize="@dimen/_11sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:paddingTop="@dimen/_10sdp"
                android:textAlignment="textEnd"
                android:drawablePadding="@dimen/_5sdp"
                android:drawableRight="@drawable/blue_double_check"
                android:textColor="@color/black"
                android:layout_gravity="center"/>
        </RelativeLayout>
    </RelativeLayout>
    <TextView
        style="@style/CommonTextWrapcontent"
        android:textColor="@color/black"
        android:textSize="@dimen/_6sdp"
        android:layout_gravity="end"
        android:layout_marginRight="@dimen/_50sdp"
        android:layout_marginTop="@dimen/_3sdp"
        android:text="2:03pm"/>
</LinearLayout>