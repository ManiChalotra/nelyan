<?xml version="1.0" encoding="utf-8"?>

<layout>
<data>
    <variable
        name="model"
        type="com.nelyan_live.chat.ChatData" />
</data>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/llSender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        setChatVisibility="@{model.senderId}"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivSender"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:scaleType="centerCrop"
            setChatImage="@{model.recieverImage}"
            app:layout_constraintBottom_toBottomOf="@id/tvSender"
            app:layout_constraintStart_toStartOf="parent"
            />



        <TextView
            android:id="@+id/tvSender"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginStart="5dp"
            android:text="@{model.message}"
            android:maxWidth="200dp"
            android:minWidth="80dp"
            android:padding="8dp"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:background="@drawable/chat"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tvSenderTime"
            app:layout_constraintStart_toEndOf="@id/ivSender"/>

        <TextView

            android:id="@+id/tvSenderTime"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            setTime="@{model.created}"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/tvSender"
            android:textSize="8dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/llReceiver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/llSender"
        app:layout_constraintEnd_toEndOf="parent"
        setChatVisibility="@{model.receiverId}"

        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivReceiver"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="20dp"
            android:scaleType="centerCrop"
            setChatImage="@{model.senderImage}"
            app:layout_constraintBottom_toBottomOf="@id/tvReceiver"
            app:layout_constraintEnd_toEndOf="parent"
            />



        <TextView
            android:id="@+id/tvReceiver"
            android:layout_gravity="center"
            android:layout_marginEnd="5dp"
            android:text="@{model.message}"
            android:maxWidth="200dp"
            android:minWidth="80dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:padding="8dp"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:background="@drawable/rightchat"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tvReceiverTime"
            app:layout_constraintEnd_toStartOf="@id/ivReceiver"/>

        <TextView
            android:id="@+id/tvReceiverTime"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            setTime="@{model.created}"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/tvReceiver"
            android:textSize="8dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>
