<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MyAlertActivity">
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        >
        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/left_arrow"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/_10sdp"
            />
        <TextView
            style="@style/HeaderText"
            android:layout_centerInParent="true"
            android:textColor="@color/black"
            android:text="My Alert"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_10sdp"
android:orientation="vertical"
        android:layout_below="@id/header">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ivLogo"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_90sdp"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/_30sdp"
                android:src="@drawable/smallogo"
                android:layout_gravity="center"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="@dimen/_20sdp"

            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="60"
                android:layout_marginRight="@dimen/_10sdp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grey"
                    android:fontFamily="@font/medium"
                    android:drawableRight="@drawable/cross_icon"
                    android:text="Chandigarh Sector 46,160046"
                    android:textSize="@dimen/_10sdp"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@color/black"/>
            </LinearLayout>
<LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grey"
                    android:fontFamily="@font/medium"
                    android:drawableRight="@drawable/down_arrow"
                    android:text="0KM"
                    android:textSize="@dimen/_10sdp"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@color/black"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30sdp"
            android:orientation="horizontal">
<Button
    android:layout_width="wrap_content"
    android:layout_height="@dimen/_20sdp"
    android:background="@drawable/creche_btn"
    android:textColor="@color/white"
    android:textSize="@dimen/_10sdp"
    android:textAllCaps="true"
    android:text="CRECHE"/>
<TextView
    style="@style/CommonTextWrapcontent"
    android:drawableLeft="@drawable/location_grey"
    android:layout_marginLeft="@dimen/_10sdp"
    android:drawablePadding="@dimen/_5sdp"
    android:text="Filter sur une activite"/>
        </LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_40sdp"
    android:gravity="center"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/chk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/checked"/>
<TextView
   style="@style/CommonTextWrapcontent"
    android:text="Creche"
    android:layout_marginLeft="@dimen/_10sdp"
    android:fontFamily="@font/semibold"/>
</LinearLayout><LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_15sdp"
    android:gravity="center"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/unchk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/checkbox"/>
<TextView
   style="@style/CommonTextWrapcontent"
    android:text="Maternal Assistant"
    android:layout_marginLeft="@dimen/_10sdp" />
</LinearLayout><LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_15sdp"
    android:gravity="center"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/chkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/checkbox"/>
<TextView
   style="@style/CommonTextWrapcontent"
    android:text="Baby Sitter"
    android:layout_marginLeft="@dimen/_10sdp" />

</LinearLayout>
        <Button
            android:id="@+id/btnOk"
            style="@style/Button"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_60sdp"
            android:background="@drawable/btn"
            android:text="OK"/>
    </LinearLayout>
</RelativeLayout>