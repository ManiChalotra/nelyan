<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.ProfileActivity">

    <com.tuyenmonkey.mkloader.MKLoader
        android:id="@+id/profileProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:elevation="@dimen/_5dp"
        android:visibility="gone"
        app:mk_color="@color/colorPrimary"
        app:mk_type="FishSpinner" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/_10sdp"
                android:src="@drawable/left_arrow" />

            <TextView
                style="@style/HeaderText"
                android:layout_centerInParent="true"
                android:text="@string/profile"
                android:textColor="@color/black" />
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/header"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_190sdp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_userProfile"
                        android:layout_width="@dimen/_140sdp"
                        android:layout_height="@dimen/_140sdp"
                        android:layout_alignParentTop="true"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:src="@mipmap/ic_user_place" />

                    <com.tuyenmonkey.mkloader.MKLoader
                        android:id="@+id/imageViewProgressBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:elevation="@dimen/_5dp"
                        android:visibility="gone"
                        app:mk_color="@color/colorPrimary"
                        app:mk_type="FishSpinner" />

                    <ImageView
                        android:id="@+id/ivPlus"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="@dimen/_70sdp"
                        android:layout_marginBottom="@dimen/_20sdp"
                        android:src="@drawable/plus"
                        android:visibility="gone" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ll_public"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="-30dp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:background="@drawable/shape"
                    android:orientation="vertical"
                    android:padding="@dimen/_7sdp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tvEdit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/semibold"
                        android:paddingStart="@dimen/_5sdp"
                        android:text="@string/edit"
                        android:textSize="@dimen/_10sdp" />

                    <TextView
                        android:id="@+id/tvDelete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:fontFamily="@font/semibold"
                        android:paddingStart="@dimen/_5sdp"
                        android:text="@string/delete"
                        android:textSize="@dimen/_10sdp" />

                </LinearLayout>

                <TextView
                    style="@style/CommonTextMatchparent"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:text="@string/name"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/tv_usernameProfile"
                    style="@style/CommonTextMatchparent"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/semibold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15sdp" />
                <TextView
                    style="@style/CommonTextMatchparent"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:text="@string/Email"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/tv_emailProfile"
                    style="@style/CommonTextMatchparent"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/semibold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15sdp" />

                <TextView
                    style="@style/CommonTextMatchparent"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:text="@string/city_name"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/tv_cityProfile"
                    style="@style/CommonTextMatchparent"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/semibold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15sdp" />



                <Button
                    android:id="@+id/btnEdit"
                    style="@style/Button"
                    android:layout_marginTop="@dimen/_40sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:background="@drawable/btn"
                    android:text="@string/edit_profile"
                    android:textAllCaps="true" />
            </LinearLayout>

        </ScrollView>


    </RelativeLayout>



</RelativeLayout>
