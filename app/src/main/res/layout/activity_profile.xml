<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.ProfileActivity">
    <com.tuyenmonkey.mkloader.MKLoader
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:mk_type="FishSpinner"
        android:layout_centerInParent="true"
        android:elevation="@dimen/_5dp"
        android:id="@+id/profileProgressBar"
        android:visibility="gone"
        app:mk_color="@color/colorPrimary"
        />

<!--    <ScrollView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent">-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp">
        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/left_arrow"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/_10sdp"
            />
        <TextView
            style="@style/HeaderText"
            android:layout_centerInParent="true"
            android:textColor="@color/black"
            android:text="Profile"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_190sdp">
            <ImageView
                android:id="@+id/iv_userProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"/>
            <com.tuyenmonkey.mkloader.MKLoader
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:mk_type="FishSpinner"
                android:layout_centerInParent="true"
                android:elevation="@dimen/_5dp"
                android:id="@+id/imageViewProgressBar"
                android:visibility="gone"
                app:mk_color="@color/colorPrimary"
                />
            <ImageView
                android:visibility="gone"
                android:id="@+id/ivPlus"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/plus"
                android:layout_marginBottom="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_70sdp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_5sdp"
            android:visibility="gone"
         android:layout_marginTop="-30dp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@drawable/shape"
            android:orientation="vertical"
            android:padding="@dimen/_7sdp"
            >

            <TextView
                android:id="@+id/tvEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/semibold"
                android:paddingLeft="@dimen/_5sdp"
                android:text="Edit"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:id="@+id/tvDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:fontFamily="@font/semibold"
                android:paddingLeft="@dimen/_5sdp"
                android:text="Delete"
                android:textSize="@dimen/_10sdp" />

        </LinearLayout>
        <TextView
            style="@style/CommonTextMatchparent"
            android:text="Name"
            android:layout_marginTop="@dimen/_20sdp"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/grey"
            />
<TextView
  style="@style/CommonTextMatchparent"
    android:id="@+id/tv_usernameProfile"
    android:textSize="@dimen/_15sdp"
    android:layout_marginTop="@dimen/_5sdp"
    android:textColor="@color/black"
    android:fontFamily="@font/semibold"/>
<!--
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@color/black"/>-->
        <TextView
            style="@style/CommonTextMatchparent"
            android:text="Email"
            android:layout_marginTop="@dimen/_15sdp"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/grey"
            />
        <TextView
            android:id="@+id/tv_emailProfile"
            style="@style/CommonTextMatchparent"
            android:textSize="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:textColor="@color/black"
            android:fontFamily="@font/semibold"/>
     <!--   <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@color/black"/>-->
        <TextView
            style="@style/CommonTextMatchparent"
            android:text="City Name"
            android:layout_marginTop="@dimen/_15sdp"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/grey"
            />
        <TextView
            style="@style/CommonTextMatchparent"
            android:id="@+id/tv_cityProfile"
            android:textSize="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:textColor="@color/black"
            android:fontFamily="@font/semibold"/>
      <!--  <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@color/black"/>-->
        <TextView
            style="@style/CommonTextMatchparent"
            android:text="Types of Utilisation"
            android:layout_marginTop="@dimen/_15sdp"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/grey"
            />

        <TextView
            style="@style/CommonTextMatchparent"
            android:id="@+id/tv_utilizationProfile"
            android:textSize="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:textColor="@color/black"
            android:fontFamily="@font/semibold"/>

        <Button
            style="@style/Button"
            android:id="@+id/btnEdit"
            android:layout_marginTop="@dimen/_40sdp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/_20sdp"
            android:text="EDIT PROFILE"
            android:background="@drawable/btn"/>
    </LinearLayout>

</RelativeLayout>

<!--    </ScrollView>-->


</RelativeLayout>
