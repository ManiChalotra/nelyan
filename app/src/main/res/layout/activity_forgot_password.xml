<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        >
        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/left_arrow"
            android:layout_centerInParent="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/_10sdp"
            />
        <TextView
            style="@style/HeaderText"
            android:layout_centerInParent="true"
            android:textColor="@color/black"
            android:text="@string/recover_password"/>


    </RelativeLayout>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:fitsSystemWindows="true"
        tools:context=".ui.ForgotPasswordActivity">

        <com.tuyenmonkey.mkloader.MKLoader
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:mk_type="FishSpinner"
            android:layout_centerInParent="true"
            android:elevation="@dimen/_5dp"
            android:id="@+id/forgetPasswordProgressBar"
            android:visibility="gone"
            app:mk_color="@color/colorPrimary"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:orientation="vertical">
            <ImageView
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_90sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:src="@drawable/latest_logo"
                android:layout_gravity="center"/>
            <TextView
                style="@style/CommonTextWrapcontent"
                android:text="@string/recover_password"
                android:layout_marginTop="@dimen/_40sdp"
                android:textSize="@dimen/_15sdp"
                android:textColor="@color/black"
                android:fontFamily="@font/bold"/>
            <TextView
                style="@style/CommonTextWrapcontent"
                android:text="@string/enter_the_email_address_associated_nwith_your_nelyan_account"
                android:layout_marginTop="@dimen/_40sdp"
                android:textColor="@color/black"
                android:fontFamily="@font/semibold"/>
            <TextView
                style="@style/CommonTextMatchparent"
                android:text="@string/Email"
                android:fontFamily="@font/medium"
                android:layout_marginTop="@dimen/_30sdp"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black"
                />
            <EditText
                style="@style/SimpleEdittext"
                android:layout_marginTop="8dp"
                android:background="@color/transparent"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:maxLines="1"
                android:gravity="bottom"
                android:id="@+id/tv_emailForgetPassword"
                android:inputType="textWebEmailAddress"
                android:hint="@string/Email"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@color/black"/>
            <Button
                android:id="@+id/btnSubmit"
                style="@style/Button"
                android:layout_marginTop="@dimen/_40sdp"
                android:background="@drawable/btn"
                android:textAllCaps="true"
                android:text="@string/submit"/>
        </LinearLayout>
    </RelativeLayout>

</ScrollView>

</LinearLayout>