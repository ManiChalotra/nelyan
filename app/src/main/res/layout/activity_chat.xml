<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="groupChatVM"
            type="com.nelyanlive.chat.GroupChatVM" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constSearch"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/btn"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/btnRegulation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:background="@color/transparent"
                android:drawableRight="@drawable/places_ic_search"
                android:drawableTint="@color/white"
                android:fontFamily="@font/semibold"
                android:onClick="@{(view)->groupChatVM.onClick(view,`searchoption`)}"
                android:text="@string/discussions_and_tips"
                android:textColor="@color/white"
                android:visibility="@{groupChatVM.searchVisible.equals(`true`)? View.GONE : View.VISIBLE}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/consSearch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn"
                android:backgroundTint="@color/grey"
                android:paddingHorizontal="@dimen/_10sdp"
                android:visibility="@{groupChatVM.searchVisible.equals(`true`)? View.VISIBLE : View.GONE}"
                app:layout_constraintTop_toTopOf="parent">

                <EditText
                    android:id="@+id/editTextSearch"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:background="@android:color/transparent"
                    android:hint="Search"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="@dimen/_12sdp">
                </EditText>

                <ImageView
                    android:id="@+id/imageSearch"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentEnd="true"
                    android:onClick="@{(view)->groupChatVM.onClick(view,`Serchclose`)}"
                    android:src="@drawable/com_facebook_close"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                </ImageView>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvChat"
            setRecyclerAdapter="@{groupChatVM.groupChatAdapter}"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="@dimen/_5sdp"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toTopOf="@id/rlBottom"
            app:layout_constraintTop_toBottomOf="@id/constSearch" />

        <RelativeLayout
            android:id="@+id/RelativSelectedImage"
            android:layout_width="@dimen/_110sdp"
            android:layout_height="@dimen/_110sdp"
            app:layout_constraintBottom_toTopOf="@+id/rlBottom"
            app:layout_constraintStart_toStartOf="@+id/rlBottom"
            android:layout_marginBottom="-5dp"
            android:background="@color/white"
            android:visibility="gone">

            <ImageView
                android:id="@+id/imageSelected"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginEnd="0dp"
                android:padding="@dimen/_2sdp"
                android:src="@drawable/age_icon" />

            <ImageView
                android:id="@+id/imageSelectedImage"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:src="@drawable/com_facebook_close">

            </ImageView>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/relativRelpy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_30sdp"
            android:layout_marginBottom="-10dp"
            android:background="@drawable/chattext"
            android:backgroundTint="@color/lightgrey"
            android:padding="@dimen/_5sdp"
            android:visibility="@{groupChatVM.replymessage.equals(``)? View.GONE : View.VISIBLE}"
            app:layout_constraintBottom_toTopOf="@+id/rlBottom"
            app:layout_constraintEnd_toEndOf="@+id/rlBottom"
            app:layout_constraintHorizontal_bias="0.47"
            app:layout_constraintStart_toStartOf="@+id/rlBottom">

            <ImageView
                android:id="@+id/imageClose"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:onClick="@{(view)->groupChatVM.onClick(view,`replyclose`)}"
                android:src="@drawable/com_facebook_close">

            </ImageView>

            <TextView
                android:id="@+id/tvReplyname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_toStartOf="@+id/imageClose"
                android:maxLines="2"
                android:text="@={groupChatVM.replymessageUserName}"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvReply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvReplyname"
                android:maxLines="2"
                android:text="@={groupChatVM.replymessage}"
                android:textColor="@color/grey" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_12sdp"
            android:background="@drawable/shape_chat"
            app:layout_constraintBottom_toBottomOf="parent">

            <EditText
                android:id="@+id/etMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@+id/icon"
                android:backgroundTint="@color/transparent"
                android:fontFamily="@font/regular"
                android:hint="@string/type_here"
                android:maxHeight="@dimen/_100sdp"
                android:maxLines="3"
                android:minHeight="@dimen/_40sdp"
                android:text="@={groupChatVM.message}"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="@dimen/_12sdp" />

            <LinearLayout
                android:id="@+id/icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivAttachment"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/attachment_icon" />

                <ImageView
                    android:id="@+id/ivSend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/message_sent" />
            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@{groupChatVM.noDataMessage}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RelativeLayout
            android:id="@+id/relativProgress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:visibility="gone">

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

            </ProgressBar>

        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>