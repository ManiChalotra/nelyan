<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shadow_gray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/image_ads"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:scaleType="fitXY"
                android:src="@mipmap/no_image_placeholder"
                app:riv_corner_radius="@dimen/_5sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_ad_name"
                        style="@style/CommonTextWrapcontent"
                        android:layout_alignParentLeft="true"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_toLeftOf="@+id/iv_dot"
                        android:fontFamily="@font/semibold"
                        android:gravity="top"
                        android:textColor="@color/app"
                        android:textSize="@dimen/_14sdp" />

                    <ImageView
                        android:id="@+id/iv_dot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_7sdp"
                        android:src="@drawable/option_dot" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_location"
                    style="@style/CommonTextWrapcontent"
                    android:drawableLeft="@drawable/location_grey"
                    android:drawablePadding="@dimen/_5sdp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/tv_activityname"
                    style="@style/CommonTextWrapcontent"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/semibold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/tv_description"
                    style="@style/CommonTextMatchparent"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_9sdp" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_msg"
            style="@style/CommonTextWrapcontent"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:textColor="@color/app"
            android:textSize="@dimen/_11sdp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_gravity="end"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_33sdp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:background="@drawable/shape"
        android:orientation="vertical"
        android:padding="@dimen/_12sdp"
        android:visibility="gone">


        <TextView
            android:id="@+id/tvEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/semibold"
            android:paddingLeft="@dimen/_5sdp"
            android:text="Edit"
            android:textSize="@dimen/_10sdp" />

        <TextView
            android:id="@+id/tvDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:fontFamily="@font/semibold"
            android:paddingLeft="@dimen/_5sdp"
            android:text="Delete"
            android:textSize="@dimen/_10sdp" />

    </LinearLayout>

</RelativeLayout>