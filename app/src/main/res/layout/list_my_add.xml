<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rl_1"
    android:background="@drawable/shadow_gray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/ll_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">
            <ImageView
                android:id="@+id/image"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_70sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:scaleType="fitXY"
                android:src="@drawable/img_1"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        style="@style/CommonTextWrapcontent"
                        android:text="Danse"
                        android:textColor="@color/app"
                        android:layout_alignParentLeft="true"
                        android:textSize="@dimen/_14sdp"
                        android:gravity="top"
                        android:fontFamily="@font/semibold"/>
                    <ImageView
                        android:id="@+id/iv_dot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/option_dot"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_7sdp"
                        android:layout_centerInParent="true"
                        android:layout_alignParentEnd="true"
                        />
                </RelativeLayout>
                <TextView
                    android:id="@+id/name"
                    style="@style/CommonTextWrapcontent"
                    android:text="MarÃ©chal 20KM"

                    android:textSize="@dimen/_10sdp"
                    android:gravity="center"
                    android:drawableLeft="@drawable/location_grey"
                    android:drawablePadding="@dimen/_5sdp"
                    android:textColor="@color/black"/>
                <TextView
                    style="@style/CommonTextWrapcontent"
                    android:text="Lorem ipsum"

                    android:textColor="@color/black"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:textSize="@dimen/_12sdp"
                    android:fontFamily="@font/semibold"/>
                <TextView
                    style="@style/CommonTextMatchparent"
                    android:textSize="@dimen/_9sdp"
                    android:text="Maecenas nec quam posuere, mollis lacus sed, malesuace dolor. In finibus bibenoum metus..."/>
            </LinearLayout>

        </LinearLayout>
        <TextView
            style="@style/CommonTextWrapcontent"
            android:textSize="@dimen/_11sdp"
            android:textColor="@color/app"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="Ex still 2 free places for dansing"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
android:visibility="gone"
        android:layout_gravity="end"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_33sdp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:background="@drawable/shape"
        android:orientation="vertical"
        android:padding="@dimen/_12sdp">


        <TextView
            android:id="@+id/tvEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/semibold"
            android:paddingLeft="@dimen/_5sdp"
            android:text="Edit"
            android:textSize="@dimen/_10sdp" />

        <TextView
            android:id="@+id/tvDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:fontFamily="@font/semibold"
            android:paddingLeft="@dimen/_5sdp"
            android:text="Delete"
            android:textSize="@dimen/_10sdp" />

    </LinearLayout>

</RelativeLayout>