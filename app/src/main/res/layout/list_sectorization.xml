<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_10sdp"
    android:background="@drawable/shape">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/ll_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"

            android:orientation="horizontal">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/iv_school_image"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                android:scaleType="fitXY"
                android:src="@drawable/map_image"
                app:riv_corner_radius="@dimen/_5sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_school_name"
                    style="@style/CommonTextWrapcontent"
                    android:fontFamily="@font/semibold"
                    android:text="Bais-bonnet"
                    android:textColor="@color/app"
                    android:textSize="@dimen/_14sdp" />

                <TextView
                    android:id="@+id/tv_school_type"
                    style="@style/CommonTextWrapcontent"
                    android:fontFamily="@font/semibold"
                    android:text="Nursery Schools"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/tv_address"
                    style="@style/CommonTextMatchparent"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:drawableLeft="@drawable/location_grey"
                    android:text="43 bis rue du Marechal Foch, 78600 Maisons-Laffitte"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_8sdp" />

                <TextView
                    android:id="@+id/tv_school_phone"
                    style="@style/CommonTextMatchparent"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:drawableLeft="@drawable/phone_icon"
                    android:drawablePadding="@dimen/_5sdp"
                    android:text="012345678"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_8sdp" />

                <TextView
                    android:id="@+id/tv_school_website"
                    style="@style/CommonTextMatchparent"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:drawableLeft="@drawable/world_icon"
                    android:drawablePadding="@dimen/_5sdp"
                    android:text="www.nelyan.com"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_8sdp" />

                <TextView
                    android:id="@+id/tv_school_time"
                    style="@style/CommonTextMatchparent"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:drawableLeft="@drawable/clock_icon"
                    android:drawablePadding="@dimen/_5sdp"
                    android:text="12:10 min | 26km"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_8sdp" />

                <TextView
                    android:id="@+id/get"
                    style="@style/CommonTextMatchparent"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:text="GET DIRECTION"
                    android:textColor="@color/app"
                    android:textSize="@dimen/_8sdp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>