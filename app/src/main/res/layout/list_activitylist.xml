<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_1"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_10sdp"
    android:elevation="@dimen/_5sdp"
    android:background="@drawable/shadow_gray"
    app:cardCornerRadius="@dimen/_5sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/iv_activity_image"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_4sdp"
                app:riv_corner_radius="@dimen/_5sdp"
                android:scaleType="fitXY"
                android:src="@mipmap/no_image_placeholder" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_activityname"
                        style="@style/CommonTextWrapcontent"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="-2dp"
                        android:fontFamily="@font/semibold"
                        android:gravity="top"
                        android:text="Danse"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_toLeftOf="@+id/iv_favourite"
                        android:textColor="@color/app"
                        android:textSize="@dimen/_14sdp" />

                    <ImageView
                        android:id="@+id/iv_favourite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_marginRight="@dimen/_4sdp"
                        android:src="@drawable/heart_purple" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_address"
                    style="@style/CommonTextWrapcontent"
                    android:drawableLeft="@drawable/location_grey"
                    android:drawablePadding="@dimen/_5sdp"
                    android:gravity="center"
                    android:text="@string/mar_chal_20km"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/tv_ad_info"
                    style="@style/CommonTextWrapcontent"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/semibold"
                    android:text="@string/lorem_ipsum"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/tv_description"
                    style="@style/CommonTextMatchparent"
                    android:layout_marginRight="@dimen/_4sdp"
                    android:text="Maecenas nec quam posuere, mollis lacus sed, malesuace dolor.In finibus bibenoum metus..."
                    android:textSize="@dimen/_9sdp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_available_place"
            style="@style/CommonTextWrapcontent"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:text="Ex still 2 free places for dansing"
            android:textColor="@color/app"
            android:textSize="@dimen/_11sdp" />
    </LinearLayout>


</RelativeLayout>