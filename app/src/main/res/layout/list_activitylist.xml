<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_1"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_5sdp"
    android:elevation="@dimen/_5sdp"
    android:background="@drawable/shadow_gray"
    app:cardCornerRadius="@dimen/_5sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/ll_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/iv_activity_image"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_4sdp"
                app:riv_corner_radius="@dimen/_5sdp"
                android:scaleType="centerCrop"
                android:src="@mipmap/no_image_placeholder"/>

            <LinearLayout
                android:id="@+id/ll_activity_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/_5sdp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_activityname"
                        style="@style/CommonTextWrapcontent"
                        android:layout_alignParentLeft="true"
                        android:fontFamily="@font/semibold"
                        android:gravity="top"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:textColor="@color/app"
                        android:textSize="@dimen/_14sdp" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_address"
                    style="@style/CommonTextWrapcontent"
                    android:drawableLeft="@drawable/location_grey"
                    android:drawablePadding="@dimen/_2sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/tv_nameOfShop"
                    style="@style/CommonTextWrapcontent"
                    android:fontFamily="@font/semibold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/tv_description"
                    style="@style/CommonTextMatchparent"
                    android:layout_marginRight="@dimen/_4sdp"
                    android:textSize="@dimen/_9sdp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_favouritessss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:padding="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_4sdp"
                android:src="@drawable/heart_purple" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_available_place"
            style="@style/CommonTextWrapcontent"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:textColor="@color/app"
            android:textSize="@dimen/_11sdp" />
    </LinearLayout>


</RelativeLayout>