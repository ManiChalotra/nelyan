<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_5sdp"
    android:orientation="vertical">
    <TextView
        style="@style/CommonTextWrapcontent"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="@string/select_time1" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                style="@style/CommonTextWrapcontent"
                android:layout_gravity="center"
                android:text="@string/from1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_mornning_fromtime"
                    style="@style/CommonTextMatchparent"
                    android:hint="@string/select_from"
                    android:inputType="number"
                    android:paddingStart="@dimen/_5sdp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey"
                    app:drawableRightCompat="@drawable/clock_purple_icon" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@color/black" />

            </LinearLayout>

        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                style="@style/CommonTextWrapcontent"
                android:layout_gravity="center"
                android:text="@string/to1" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_3sdp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_morning_totime"
                    style="@style/CommonTextMatchparent"
                    android:drawableEnd="@drawable/clock_purple_icon"
                    android:hint="@string/select_to"
                    android:inputType="number"
                    android:paddingStart="@dimen/_5sdp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@color/black" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        style="@style/CommonTextWrapcontent"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="@string/select_time2" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                style="@style/CommonTextWrapcontent"
                android:layout_gravity="center"
                android:text="@string/from1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_evening_fromtime"
                    style="@style/CommonTextMatchparent"
                    android:hint="@string/select_from"
                    android:inputType="number"
                    android:paddingStart="@dimen/_5sdp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey"
                    app:drawableRightCompat="@drawable/clock_purple_icon" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@color/black" />

            </LinearLayout>

        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                style="@style/CommonTextWrapcontent"
                android:layout_gravity="center"
                android:text="@string/to1" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_3sdp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_evening_totime"
                    style="@style/CommonTextMatchparent"
                    android:drawableEnd="@drawable/clock_purple_icon"
                    android:hint="@string/select_to"
                    android:inputType="number"
                    android:paddingStart="@dimen/_5sdp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@color/black" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>